#include <iostream>

using namespace std;

int main()
{
    int num5,num6;
    int result=0;
    char op;
    
    cout<< "Enter first number: ";
    cin>> num5;
    cout<< "Enter  Enter operator: ";
    cin>> op;
    cout<< "Enter second number: ";
    cin>> num6;
 
   
   if(op == '+'){
     result = num5 + num6;
    } else if (op == '-'){
        result = num5 - num6;
    } else if (op == '/'){
        result = num5 / num6;
    } else if (op == '*'){
        result = num5 * num6;
    } else{
      cout<<"Invalid Operation";  
    }
    cout<<result;  

    return 0;
}
